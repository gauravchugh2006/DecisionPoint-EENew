@model DecisionPoint.Models.ForgetPassword
@{
    Layout = null;
    ViewBag.Title = "Forgot Password";
}
<html>
<head>
    <meta content='IE=Edge,chrome=1' http-equiv='X-UA-Compatible' />
    <meta http-equiv="X-UA-Compatible" content="IE=10">
    <title>Forgot Password</title>

    @Scripts.Render("~/bundles/Login")
    @Styles.Render("~/Content/css/Logincss")
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/css/Login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/Login/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <style type="text/css">
    .confirmationdivinner {
	width:400px; 
	padding:0px;
	margin:0px;
	position:absolute; 
	display:none; 
	top:50%; 
	left:50%; 
	margin:-30px 0px 0px -136px; 
	z-index:15;
	}
	
.confirmationdivmain{
	width:100%;
	height:100%;
	background:#000;
	position:fixed;
	top:0px;
	left:0px;
	opacity:0.5;
	display:none;
	z-index:15;
	}
.confirmationdiv-f {
		width:590px;
		border-top:1px solid #e9e9eb;
		background:#f4f4f5;
		padding:10px 10px 10px 0px;
		float:left;
		}	
 .confirmationdiv-h {
		margin:0px;
		padding:0px;
		width:600px;
		height:51px;
		background-color:#3A87AD;
		border-top:1px solid #566a5a;
		border-left:1px solid #566a5a;
}	

    </style>
    <script type="text/javascript">

        function CheckValidation() {
            if ($("#Emailid").val() == '') {
                $("#EmailRequired").show();
                return false;
            }
            else if ($("#Emailid").val() != '') {
                $("#EmailRequired").hide();
                if (validateEmail($("#Emailid"))) {
                    return true;
                } else {
                    return false;
                }
            }

        }
        function validateEmail($email) {
            var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
            if (!emailReg.test($email)) {
                $("#EmailValidate").show();
                return false;
            } else {
                $("#EmailValidate").hide();
                return true;
            }
        }


    </script>
</head>
@using (Html.BeginForm("ForgetPassword", "Login", FormMethod.Post, new { id = "SubmitForm" }))
{ 
 
    <body>

        <div id='header'>
            <div class='navbar navbar-static-top'>
                <div class='navbar-inner'>
                    <div class='container'>
                        <a class='btn btn-navbar' data-target='.nav-collapse' data-toggle='collapse'>
                            <span class='icon-bar'></span>
