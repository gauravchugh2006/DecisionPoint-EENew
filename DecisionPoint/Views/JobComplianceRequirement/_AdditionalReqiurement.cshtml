                <tr>
                    <th>Reqiured By</th>
                    <th>Attribute</th>
                    <th>Review</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AddReqMasterList.Where(x => x.IsActive))
                {

                    if (reqById == item.RequiredByCompanyId)
                    {
