                    attribute = item.title;
                }
            </tbody>
        </table>
        @{reqById = string.Empty; attribute = string.Empty;}
        <table class="table table-hover" id="pastAddReqDetails" style="display:none;">
            <thead>
                <tr>
                    <th>Reqiured By</th>
                    <th>Attribute</th>
                    <th>Review</th>
                    <th></th>
                </tr>
            </thead>
